<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/comment_user"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/comment_time"
        android:textStyle="normal|italic"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/comment_user"
        android:layout_alignBottom="@+id/comment_user"
        android:layout_toRightOf="@+id/comment_user"
        android:layout_toEndOf="@+id/comment_user" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_text"
        android:layout_below="@+id/comment_user"
        android:layout_alignLeft="@+id/comment_user"
        android:layout_alignStart="@+id/comment_user" />
</RelativeLayout>