<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:drawable/title_bar">

    <TextView
        android:text="@string/search_ads_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="22dp"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="?android:attr/listDivider"
        android:layout_below="@+id/textView27"
        android:id="@+id/filters_divider"
        android:layout_marginTop="10dp" />

    <Button
        android:text="@string/search_ads_filtered_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_searchCat2"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:layout_marginTop="23dp"
        android:id="@+id/button_applyFilters" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/spinner_searchCat1"
        android:entries="@array/cat_1"
        android:layout_below="@+id/filters_divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/spinner_searchCat2"
        android:entries="@array/__"
        android:padding="0dp"
        android:layout_below="@+id/spinner_searchCat1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/search_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/textView_restartSearch"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/button_applyFilters"
        android:layout_alignBottom="@+id/button_applyFilters"
        android:layout_toRightOf="@+id/button_applyFilters"
        android:layout_toEndOf="@+id/button_applyFilters"
        android:textStyle="normal|bold" />
</RelativeLayout>