<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ad_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_info" />


    <TextView
        android:id="@+id/ad_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_title"
        android:layout_marginTop="5dp"
        android:text="Some text that is th description of the ad..."
        android:textColor="?android:attr/textColorTertiary"
        android:layout_toRightOf="@+id/ad_img"
        android:layout_toEndOf="@+id/ad_img"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"/>

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ad_img"
        android:layout_toEndOf="@+id/ad_img"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_id"
        android:layout_below="@+id/ad_text"
        android:layout_alignLeft="@+id/ad_text"
        android:layout_alignStart="@+id/ad_text"
        android:visibility="gone"/>

</RelativeLayout>